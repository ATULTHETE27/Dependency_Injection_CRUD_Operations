
@model IEnumerable<Student>
@{
    ViewBag.Title = "Students";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p><h1>Students</h1></p>
        <a class="text-dark btn btn-outline-success" asp-controller="Student" asp-action="AddNewStudent">Add New Student</a>

        <table class="table">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Percentage</th>
                <th>DOB</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.First_Name</td>
                    <td>@student.Last_Name</td>
                    <td>@student.Percentage</td>
                    <td>@student.DOB</td>
                    <td><a class="text-dark btn btn-outline-success" asp-controller="Student" asp-action="EditStudent" asp-route-id="@student.Id">Update</a></td>
                    <td><a class="text-dark btn btn-outline-danger" asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@student.Id">Delete</a></td>
                </tr>
            }
        </table>
    </div>
</div>
