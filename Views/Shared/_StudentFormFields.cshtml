@model Asp.netCoreMVCIntro.ViewModels.StudentViewModel

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="form-group mb-3">
            <label asp-for="First_Name" class="control-label"></label>
            <input asp-for="First_Name" class="form-control">
            <span asp-validation-for="First_Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Last_Name" class="control-label"></label>
            <textarea asp-for="Last_Name" class="form-control"></textarea>
            <span asp-validation-for="Last_Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Percentage" class="control-label"></label>
            <textarea asp-for="Percentage" class="form-control"></textarea>
            <span asp-validation-for="Percentage" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="DOB" class="control-label"></label>
            <textarea asp-for="DOB" class="form-control"></textarea>
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="CollageId" class="control-label"></label>
            <textarea asp-for="CollageId" class="form-control"></textarea>
            <span asp-validation-for="CollageId" class="text-danger"></span>
        </div>
        @*<div class="form-group mb-3">
            <label class="control-label">Please select Collage</label>
            <select asp-for="CollageId" asp-items="ViewBag.Collages"></select>
        </div>*@

        <div class="form-group mb-3">
            <button type="submit" class="btn btn-outline-success float-end">Submit</button>
            @*<input type="submit" value="Submit" class="btn btn-outline-success float-end">*@
            <a asp-controller="Collage" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>

    </div>
</div>